<Window x:Class="NPOIExcelHelper.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NPOIExcelHelper"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
   
    
    <Grid>
        
        <Button x:Name="ImportExcel" Width="110" Height="40" Content="导入数据" Margin="0,20,0,0" VerticalAlignment="Top" HorizontalAlignment="Center" Click="ImportExcel_Click" />
        <Button x:Name="ExportExcel" Width="110" Height="40" Content="导出数据" Margin="0,80,0,0" VerticalAlignment="Top" HorizontalAlignment="Center" Click="ExportExcel_Click" />
        <DataGrid x:Name="dataGrid1" HorizontalAlignment="Left" Height="300" VerticalAlignment="Top" Width="200" ItemsSource="{Binding}"/>

    </Grid>
</Window>
